{
    "manifest_version": 2,
    "name": "Fancy Bookmarks Page",
    "version": "0.1",

    "description": "Adds a full page bookmark browser with background images, decorative tabs, and more.",

    "icons":{
        "48": "Icons/fancyBookmarks48.png"
    },

    "permissions": [
        "bookmarks",
        "history",
        "storage"
    ],

    "browser_action": {
        "default_title": "Bookmarks Browser",
        "default_icon": {
            "19": "Icons/browserAction19.png"
          }
    },

    "options_ui": {
        "page": "Settings Page/settings.html",
        "open_in_tab": false
      },    

    "background": {
        "scripts": ["Background Scripts/main.js"],
        "persistent": false,
        "type": "module"
      },      

      "browser_specific_settings": {
        "gecko": {
          "id": "betterbookmarks@jvr.org"
        }
      }
}